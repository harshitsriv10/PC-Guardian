<Page x:Class="PCGaurdianV1.reset"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCGaurdianV1"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="reset">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Left" Foreground="White" Height="84" Margin="0,0,10,0" TextWrapping="Wrap" Text="Enter Admin Details and click on confirm to delete account. All your settings and users will be deleted." VerticalAlignment="Top" Width="419" FontSize="20" TextAlignment="Left"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <WrapPanel>
                    <Label Name="unameName" Content="User Name" Foreground="White" HorizontalAlignment="Left" Height="39" Margin="10,10,10,10" VerticalAlignment="Top" Width="170" RenderTransformOrigin="0.531,1.602" FontSize="20"/>
                    <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="unametxt"  HorizontalAlignment="Left" Height="30" Margin="10,10,10,10" MaxLength="30" TextWrapping="Wrap" Text="" Width="230" TextAlignment="Center" FontSize="15" />
                </WrapPanel>
                <WrapPanel>
                    <Label Name="pass" Content="Password" HorizontalAlignment="Left" Foreground="White" Height="39" Margin="10,10,10,10" VerticalAlignment="Top" Width="170" RenderTransformOrigin="0.531,1.602" FontSize="20"/>
                    <PasswordBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="passtxt" HorizontalAlignment="Left" Height="30" Margin="10,10,10,10" Width="230" MaxLength="30" FontSize="15"/>
                </WrapPanel>
                <TextBlock  Name="nomatch"  Visibility="Collapsed" Foreground="Red" HorizontalAlignment="Right" Height="20" TextWrapping="Wrap" Text="Invalid Credentials" Width="238"></TextBlock>
                <WrapPanel HorizontalAlignment="Center">
                    <Button Name="confirm" Content="Confirm" HorizontalAlignment="Center" Height="47" Foreground="White" Margin="0,0,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="confirm_Click"/>
                    <Button Name="Back" Content="Back" HorizontalAlignment="Center" Height="47" Margin="20,0,0,0" VerticalAlignment="Top" Width="166" FontSize="20" Click="Back_Click"/>
                </WrapPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
